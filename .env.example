# =============================================================================
# NantucketPros Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
# Get these from your Supabase project settings: https://app.supabase.com
# Project Settings > API

# Public URL - safe to expose to the browser
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Anonymous/Public key - safe to expose to the browser
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key - NEVER expose to the browser, use only in API routes
# This key bypasses Row Level Security - use with extreme caution
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -----------------------------------------------------------------------------
# Stripe Configuration
# -----------------------------------------------------------------------------
# Get these from your Stripe dashboard: https://dashboard.stripe.com/apikeys
# Use TEST keys for development, LIVE keys for production

# Secret key - NEVER expose to the browser, use only in API routes
STRIPE_SECRET_KEY=sk_test_your-secret-key-here

# Publishable key - safe to expose to the browser
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key-here

# Webhook secret - from Stripe CLI or dashboard webhooks section
# Used to verify webhook signatures for security
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# The full URL of your application (no trailing slash)
# Development: http://localhost:3000
# Production: https://nantucketpros.com
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------------------------------
# Get your API key from: https://resend.com/api-keys
# Used for transactional emails (booking confirmations, notifications, etc.)
RESEND_API_KEY=re_your-api-key-here

# Default "from" email address for outgoing emails
# Must be verified in your Resend account
RESEND_FROM_EMAIL=noreply@nantucketpros.com

# -----------------------------------------------------------------------------
# Platform Configuration
# -----------------------------------------------------------------------------

# Platform commission rate (as a decimal, e.g., 0.10 = 10%)
# This is deducted from vendor payments via Stripe Connect
PLATFORM_COMMISSION_RATE=0.10

# -----------------------------------------------------------------------------
# Optional: Rate Limiting (Production)
# -----------------------------------------------------------------------------

# Upstash Redis - for distributed rate limiting across serverless instances
# If not set, rate limiting uses in-memory storage (works fine for development)
# Get these from: https://console.upstash.com
# UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-token-here

# -----------------------------------------------------------------------------
# Optional: Analytics & Monitoring
# -----------------------------------------------------------------------------

# PostHog (or your analytics provider)
# NEXT_PUBLIC_POSTHOG_KEY=phc_your-key-here
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry (error tracking)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# -----------------------------------------------------------------------------
# Development Only
# -----------------------------------------------------------------------------

# Set to 'true' to enable debug logging in development
DEBUG=false
